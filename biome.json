{
  "$schema": "https://biomejs.dev/schemas/2.0.6/schema.json",
  "extends": ["./node_modules/@weaverse/biome/biome.json"],
  "files": {
    "includes": [
      "**",
      "!**/public/**",
      "!**/node_modules/**",
      "!**/build/**",
      "!**/dist/**",
      "!**/storefront-api.generated.d.ts",
      "!**/customer-account-api.generated.d.ts",
      "!**/.shopify/**",
      "!**/.react-router/**",
      "!**/app/styles/app.css"
    ]
  },
  "linter": {
    "rules": {
      "suspicious": {
        "noExplicitAny": "off",
        "noArrayIndexKey": "off"
      },
      "nursery": {
        "useUniqueElementIds": "off",
        "useSortedClasses": {
          "level": "on",
          "fix": "safe",
          "options": {
            "functions": ["clsx", "cva", "cn"]
          }
        }
      },
      "correctness": {
        "noUnusedVariables": "off"
      },
      "a11y": {
        "noSvgWithoutTitle": "off"
      }
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "double",
      "semicolons": "always"
    }
  }
}
